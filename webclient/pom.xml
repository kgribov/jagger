                                <!--<resource>-->
                                    <!--<directory>../chassis/configuration/configuration/reporter</directory>-->
                                    <!--<filtering>false</filtering>-->
                                <!--</resource>-->
                            <!--</resources>-->
                        <!--</configuration>-->
                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->

        </plugins>

        <outputDirectory>${build.directory}/${build.finalName}/WEB-INF/classes</outputDirectory>


</build>
</project>